<body>
	<div class="logo">
		<a href="index"><img src="" /></a>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-md-6 mt-5">
				<h1 class="text-center">WELCOME!</h1>
				<form action="/hospitallogin" method="POST">
					<div class="form-group row">
						<label for="inputUserId" class="col-sm-3 col-form-label">Username:</label>
						<div class="input-group col-sm-9">
							<div class="input-group-prepend">
								<div class="input-group-text">@</div>
							</div>
							<input type="text" class="form-control" id="inputUserId" value="Username" name="username" />
						</div>
					</div>
					<!-- <div class="form-group row">
							<label for="inputEmail" class="col-sm-3 col-form-label"
								>Email ID:</label
							>
							<div class="col-sm-9">
								<input
									type="email"
									class="form-control"
									id="inputEmail"
									value="email@example.com"
								/>
							</div>
						</div> -->
					<div class="form-group row">
						<label for="inputPassword" class="col-sm-3 col-form-label">Password:</label>
						<div class="col-sm-9">
							<input type="password" class="form-control" id="inputPassword" placeholder="Password"
								name="password" />
						</div>
					</div>
					<div class="form-group row">
						<div class="col-sm-6 text-center">
							<button type="submit" class="btn more_bt">Login</button>
						</div>
						<!-- <div class="form-group row">
							<div class="col-sm-6 d-inline">
								<button type="submit" class="btn more_bt">Login</button>
							</div>
							<div class="col-sm-6 d-inline">
								<button type="submit" class="btn more_bt">
									Forgot Password?
								</button>
							</div>
						</div> -->
					</div>
					<div class="text-center">
						<p>
							Not registered yet?<span><a href="register" style="color: #a258ed">Register Here</a></span>
						</p>
					</div>
				</form>
			</div>
			<div class="col-md-4 login_illustration">
				<img src="/asserts/img/login_illustration.png" style="width: 70%;">
			</div>
		</div>
	</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
